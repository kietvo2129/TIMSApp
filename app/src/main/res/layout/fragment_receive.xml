                        android:textStyle="italic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/edt_sr_container"
                        android:layout_alignParentStart="true"
                        android:text="Receiving Date"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="@color/colorHeaderListView" />

                    <TextView
                        android:id="@+id/edt_sr_receiving_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/lbl_4"
                        android:layout_marginEnd="8dp"
                        android:layout_toStartOf="@+id/btn_sr_each"
                        android:background="@drawable/selector_edittext"
                        android:ellipsize="end"
                        android:gravity="center|left"
                        android:hint="Receiving Date"
                        android:maxLines="1"
                        android:padding="8dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="#fff"
                        android:textColorHint="@color/white" />

                    <Button
