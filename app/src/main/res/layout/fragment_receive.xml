                app:cardBackgroundColor="@color/color1"
                app:cardCornerRadius="8dp"
                >
                <RelativeLayout
                    android:padding="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/label_mqr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:text="Bobbin No"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="@color/colorHeaderListView" />

                    <TextView
                        android:id="@+id/tv_bobbin_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/im_can_bobbin"
                        android:layout_alignBottom="@+id/im_can_bobbin"
                        android:layout_alignParentStart="true"
                        android:layout_marginEnd="8dp"
                        android:layout_toStartOf="@+id/im_can_bobbin"
                        android:background="@drawable/selector_edittext"
                        android:ellipsize="end"
                        android:gravity="center|left"
                        android:hint="Bobbin No"
                        android:maxLines="1"
                        android:padding="8dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="#fff"
                        android:textColorHint="@color/white" />

                    <ImageView
                        android:id="@+id/im_can_bobbin"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_below="@+id/label_mqr"
                        android:layout_toStartOf="@+id/im_me"
                        android:layout_alignParentEnd="true"
                        android:background="@drawable/box_view_layout"
                        android:padding="2dp"
                        android:src="@drawable/qricon"
                        app:tint="#fff" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>
