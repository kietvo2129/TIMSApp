<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.buyerqr.BuyerQrFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="2dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/color1"
            app:cardCornerRadius="4dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_margin="4dp"
                android:padding="4dp">

                <TextView
                    android:id="@+id/label_mlno_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="4dp"
                    android:text="Container"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="@color/colorHeaderListView" />

                <TextView
                    android:id="@+id/tv_qe"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_below="@+id/label_mlno_status"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="4dp"
                    android:layout_toStartOf="@+id/imex"
                    android:background="@drawable/selector_edittext"
                    android:gravity="center|left"
                    android:hint="Qr code"
                    android:maxLines="1"
                    android:padding="8dp"
                    android:textColor="#FFF"
                    android:textColorHint="#fff" />

                <ImageView
                    android:id="@+id/imex"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_below="@+id/label_mlno_status"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="4dp"
                    android:src="@drawable/qricon"
                    app:tint="#fff" />

                <TextView
                    android:id="@+id/label_buy_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_qe"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="4dp"
                    android:text="Buyer"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="@color/colorHeaderListView" />

                <TextView
                    android:id="@+id/tv_qe_buy"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_below="@+id/label_buy_status"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="4dp"
                    android:layout_toStartOf="@+id/imex"
                    android:background="@drawable/selector_edittext"
                    android:gravity="center|left"
                    android:hint="Qr code"
                    android:maxLines="1"
                    android:padding="8dp"
                    android:textColor="#FFF"
                    android:textColorHint="#fff" />

                <ImageView
                    android:id="@+id/imex_buy"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_below="@+id/label_buy_status"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="4dp"
                    android:src="@drawable/qricon"
                    app:tint="#fff" />


                <Button
                    android:id="@+id/btn_map"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imex_buy"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp"
                    android:text="Mapping Buyer QR"
                    android:textColor="#FFF"
                    android:backgroundTint="#004D40"
                     />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_buyer_qr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cr"
            android:layout_alignParentBottom="true"
            android:layout_marginVertical="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="6dp"
            tools:listitem="@layout/item_buyer_qr" />

    </RelativeLayout>

</FrameLayout>